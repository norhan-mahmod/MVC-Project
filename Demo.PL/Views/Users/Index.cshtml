@model List<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>
<br />
@if(Model.Count != 0)
{
    <div class="row">
        <div class="col-6">
            <form asp-controller="Users" asp-action="Index">
                <div class="form-group row">
                    <div class="col-4">
                        <input name="SearchValue" type="text" class="form-control " placeholder="Search">
                    </div>
                    <input type="submit" value="Search" class="btn btn-success col-2"/>
                </div>
            </form>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-success">Details</a>
                    </td>
                    <td>
                        <a asp-controller="Users" asp-action="Update" asp-route-id="@user.Id" class="btn btn-warning">Update</a>
                    </td>
                    <td>
                        <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h3>No Users Found</h3>
    </div>
}
