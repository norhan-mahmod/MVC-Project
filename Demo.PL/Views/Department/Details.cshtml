@model DepartmentViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Department Details</h1>

<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label asp-for="Code"></label>
            <input asp-for="Code" type="text" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" readonly>
        </div>
        <br />
        <a asp-controller="Department" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>
        <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To Department List</a>
    </div>
