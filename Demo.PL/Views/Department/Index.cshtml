@model List<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Departments</h1>
<div class="row">
    <div class="col-2">
        <a asp-controller="Department" asp-action="Create" class="btn btn-primary">Add New Department</a>
    </div>
</div>
@if(Model.Count() != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var dept in Model)
            {
                <tr>
                    <td>@dept.Name</td>
                    <td>@dept.Code</td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@dept.Id" class="btn btn-primary">Details</a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Update" asp-route-id="@dept.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h3>No Departments Found</h3>
    </div>
}
