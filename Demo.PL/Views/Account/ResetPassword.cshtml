@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ResetPassword</h1>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-controller="Account" asp-action="ResetPassword">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input asp-for="Email" type="hidden">
			<input asp-for="Token" type="hidden">

			<input asp-for="Password" class="text" type="password" placeholder="Password" required="">

			<input asp-for="ConfirmPassword" class="text w3lpass" type="password" placeholder="Confirm Password" required="">
			
			<input type="submit" value="Reset Password">
		</form>
	</div>
</div>
