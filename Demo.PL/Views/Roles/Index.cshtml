@model List<ApplicationRole>
@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>
<br />
<div class="row">
    <div class="col-2">
        <a asp-controller="Roles" asp-action="Create" class="btn btn-primary">Add New Role</a>
    </div>
</div>
@if (Model.Count() != 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>@role.CreatedAt</td>
                    <td>
                        <a asp-controller="Roles" asp-action="Details" asp-route-id="@role.Id" class="btn btn-primary">Details</a>
                    </td>
                    <td>
                        <a asp-controller="Roles" asp-action="Update" asp-route-id="@role.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h3>No Roles Found</h3>
    </div>
}

